{
  "compilerOptions": {
    "lib": ["es2020"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "sourceMap": false,
    "target": "es2019",
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.ts"
  ]
}
